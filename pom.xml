<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>jboss-parent</artifactId>
        <version>35</version>
    </parent>

    <groupId>org.jboss.eap.util</groupId>
    <artifactId>microprofile-expansion-pack-installer</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    
    <properties>
        <!-- Base server version (i.e. the low version) for the patch diff -->
        <version.server.appliesTo>7.3.0.GA-redhat-SNAPSHOT</version.server.appliesTo>
        <!-- Updated server version (i.e. the higher version) for the patch diff -->
        <version.server.updated>7.3.0.GA-kabir</version.server.updated>
        <!-- Expansion pack version 1.0 -->
        <expansion.pack.version>1.0</expansion.pack.version>
        <!-- Layers (comma separated), that need adding to the appliesTo server for the patching to work. -->
        <added.layers>microprofile</added.layers>

        <!-- Versions of dependencies used by the installer -->
        <version.org.eap.util.mp.installer.core>1.0.0-SNAPSHOT</version.org.eap.util.mp.installer.core>
        <version.org.jboss.as.patch-gen>2.0.1.Final</version.org.jboss.as.patch-gen>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jboss.eap.util</groupId>
            <artifactId>microprofile-expansion-pack-installer-core</artifactId>
            <version>${version.org.eap.util.mp.installer.core}</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <!-- Don't install this unless people are creating an installer containing a patch -->
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-install</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <archive>
                                <manifest>
                                    <mainClass>
                                        org.eap.util.microprofile.expansion.pack.installer.InstallerMain
                                    </mainClass>
                                </manifest>
                                <manifestEntries>
                                    <server-target-layers>${added.layers}</server-target-layers>
                                </manifestEntries>
                            </archive>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>prepare-patch</id>
            <activation>
                <property>
                    <name>prepare-patch</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <!-- Install this now since the user is creating an installer containing a patch -->
                        <artifactId>maven-install-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>default-install</id>
                                <phase>install</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack-appliesTo</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.jboss.eap</groupId>
                                            <artifactId>wildfly-dist</artifactId>
                                            <version>${version.server.appliesTo}</version>
                                            <type>zip</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/server/appliesTo</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack-updated</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.jboss.eap</groupId>
                                            <artifactId>wildfly-dist</artifactId>
                                            <version>${version.server.updated}</version>
                                            <type>zip</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/server/updated</outputDirectory>
                                            <destFileName>eap</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>adjust-applies-to</id>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <phase>process-classes</phase>
                                <configuration>
                                    <mainClass>org.eap.util.microprofile.expansion.pack.installer.util.InstallerUtilMain</mainClass>
                                    <arguments>
                                        <argument>${project.build.directory}/server/appliesTo</argument>
                                        <argument>${added.layers}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>adjust-updated</id>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <phase>process-classes</phase>
                                <configuration>
                                    <mainClass>org.eap.util.microprofile.expansion.pack.installer.util.InstallerUtilMain</mainClass>
                                    <arguments>
                                        <argument>${project.build.directory}/server/updated</argument>
                                        <argument>${added.layers}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.jboss.as</groupId>
                        <artifactId>patch-gen-maven-plugin</artifactId>
                        <version>${version.org.jboss.as.patch-gen}</version>
                        <executions>
                            <execution>
                                <id>create-patch-file</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>generate-patch</goal>
                                </goals>
                                <configuration>
                                    <!-- InstallerUtilMain which executes above renames the dists to standard names 'eap' directory -->
                                    <appliesToDist>${project.build.directory}/server/appliesTo/eap</appliesToDist>
                                    <updatedDist>${project.build.directory}/server/updated/eap</updatedDist>
                                    <patchConfig>${project.build.outputDirectory}/patch-config.xml</patchConfig>
                                    <outputFile>${project.build.outputDirectory}/patch.zip</outputFile>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
